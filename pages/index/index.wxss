.weather-wrapper {
  position: relative;
  padding-top: 174rpx;
  padding-bottom: 250rpx; 
  /* background-color: moccasin; */
}
.temp {
  margin-top: 300rpx;
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
}
.weather {
  font-size: 40rpx;
  line-height: 56rpx;
  text-align: center;
  opacity: 0.6;
}
.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.timetips {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 45rpx;
}
.timetips-icon {
  margin-top: 10rpx;
  width: 36rpx;
  height: 28rpx;
}
.timetips-text {
  font-size: 30rpx;
  /*行高一般为文字大小的1.4倍  */
  line-height: 42rpx;
  opacity: 0.5;
}
.forecast-list {
  display: flex;
}
.forecast-item {
  display: flex;
  flex-shrink: 0;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
  font-size: 36rpx;
  line-height: 42rpx;
}
.forecast-time {
  font-size: 30rpx;
  line-height: 42rpx;
}
.forecast-weather {
  margin-top: 50rpx;
  width: 60rpx;
  height: 60rpx;
}
.forecast-temp {
  margin-top: 46rpx;
  font-size: 40rpx;
  line-height: 56rpx;
}